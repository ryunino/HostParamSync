<Window x:Class="HostParamSync.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HostParamSync - パラメータ同期（ホスト関係）"
        Width="720" Height="360"
        WindowStartupLocation="CenterOwner"
        Topmost="False"
        ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <TextBlock Text="コピー元（ホスト） → ペースト先（ホスト先）" FontSize="16" FontWeight="Bold"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：コピー元 -->
            <GroupBox Header="コピー元" Padding="12" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="カテゴリー" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbSrcCat" SelectedIndex="0">
                        <ComboBoxItem Tag="OST_Walls">壁</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="パラメータ" Margin="0,12,0,4"/>
                    <ComboBox x:Name="cmbSrcParam" SelectedIndex="0">
                        <ComboBoxItem Tag="ALL_MODEL_INSTANCE_COMMENTS">コメント</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <Viewbox Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="→" FontSize="24" FontWeight="Bold"/>
            </Viewbox>

            <!-- 右側：ペースト先 -->
            <GroupBox Header="ペースト先" Padding="12" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="カテゴリー" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbDstCat" SelectedIndex="0">
                        <ComboBoxItem Tag="OST_Windows">窓</ComboBoxItem>
                        <ComboBoxItem Tag="OST_Doors">ドア</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="パラメータ" Margin="0,12,0,4"/>
                    <ComboBox x:Name="cmbDstParam" SelectedIndex="0">
                        <ComboBoxItem Tag="ALL_MODEL_INSTANCE_COMMENTS">コメント</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- フッター -->
        <DockPanel Grid.Row="4">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" >
                <CheckBox x:Name="chkAuto" Content="常時同期（IUpdater）" Margin="0,0,16,0"/>
                <TextBlock x:Name="txtStatus" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="btnSync" Content="同期（手動）" Width="120" Height="32" Margin="0,0,8,0" Click="btnSync_Click"/>
                <Button Content="閉じる" Width="96" Height="32" Click="btnClose_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
